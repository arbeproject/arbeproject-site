---
import "../styles/tailwind.css";  // Tailwind v4
import "../styles/arbe.css";      // Tu tema corporativo ARBE

const { title = "ARBE Project", description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="arbe-page bg-white text-slate-900">
    <main class="min-h-screen">
      <slot />
    </main>
  </body>
</html>





