---
import "../styles/arbe.css";        // tu estilo corporativo ARBE
import "../styles/global.css";      // el CSS con @tailwind base/components/utilities

const { title = "ARBE Project", description = "" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="arbe-page bg-white text-slate-900">
    <main class="min-h-screen">
      <slot />
    </main>
  </body>
</html>




