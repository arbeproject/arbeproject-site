---
import "../styles/arbe.css";
import "../styles/tailwind.css";

const { title = "ARBE Project", description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="arbe-page bg-white text-arbe-dark font-body">
    <main class="p-6">
      <slot />
    </main>
  </body>
</html>

